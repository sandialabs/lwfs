#ifndef SS_OPCODES_H_
#define SS_OPCODES_H_

#ifdef __cplusplus
extern "C" {
#endif

	enum lwfs_ss_opcodes {

		/** @brief Create a new object. */
		LWFS_OP_CREATE = 301,

		/** @brief Remove an existing object. */
		LWFS_OP_REMOVE,

		/** @brief Read from an object. */
		LWFS_OP_READ,

		/** @brief Write to an object. */
		LWFS_OP_WRITE,

		/** @brief Truncate the file. */
		LWFS_OP_TRUNCATE,

		/** @brief Fsync an object. */
		LWFS_OP_FSYNC,

		/** @brief Get information about the object. */
		LWFS_OP_STAT,

		/** @brief List extended attributes of an object. */
		LWFS_OP_LISTATTRS,

		/** @brief Get extended attributes of an object. */
		LWFS_OP_GETATTRS,

		/** @brief Set extended attributes of an object. */
		LWFS_OP_SETATTRS,

		/** @brief Remove extended attributes of an object. */
		LWFS_OP_RMATTRS,

		/** @brief Get an extended attribute of an object. */
		LWFS_OP_GETATTR,

		/** @brief Set an extended attribute of an object. */
		LWFS_OP_SETATTR,

		/** @brief Remove an extended attribute of an object. */
		LWFS_OP_RMATTR,

		/** @brief Revoke access to an object. */
		LWFS_OP_REVOKE,

		/** @brief Lock an object. */
		LWFS_OP_LOCK = 216,

		/** @brief Lock an object. */
		LWFS_OP_UNLOCK = 217

	};



#ifdef __cplusplus
}
#endif

#endif 

