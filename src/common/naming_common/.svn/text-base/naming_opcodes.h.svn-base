#ifndef NAMING_OPCODES_H_
#define NAMING_OPCODES_H_

#ifdef __cplusplus
extern "C" {
#endif

	enum lwfs_naming_opcodes {

		/**
		 * @brief Create a new directory entry in a directory.
		 */
		LWFS_OP_CREATE_DIR=201,

		/**
		 * @brief Remove a directory entry. 
		 */
		LWFS_OP_REMOVE_DIR,

		/**
		 * @brief Create a new file entry in a directory.
		 */
		LWFS_OP_CREATE_FILE,

		/**
		 * @brief Create a new link. 
		 */
		LWFS_OP_CREATE_LINK,

		/**
		 * @brief Remove a link. 
		 */
		LWFS_OP_UNLINK,

		/**
		 * @brief Rename an entry in the directory.
		 */
		LWFS_OP_RENAME,

		/**
		 * Lookup an entry in a directory.
		 */
		LWFS_OP_LOOKUP,

		/**
		 * @brief List the contents of a directory.
		 */
		LWFS_OP_LIST_DIR,

		/**
		 * @brief Stat a name entry.
		 */
		LWFS_OP_NAME_STAT,

		/**
		 * @brief Create a namespace.
		 */
		LWFS_OP_CREATE_NAMESPACE,

		/**
		 * @brief Remove a namespace.
		 */
		LWFS_OP_REMOVE_NAMESPACE,

		/**
		 * @brief Get a namespace.
		 */
		LWFS_OP_GET_NAMESPACE,

		/**
		 * @brief List namespaces.
		 */
		LWFS_OP_LIST_NAMESPACES,

	};



#ifdef __cplusplus
}
#endif

#endif 

